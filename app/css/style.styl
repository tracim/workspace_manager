.clearfix:after
  content " "
  display block
  height 0
  clear both
.modal
  display block
$wizardWidth = 868px
.wizard
  width $wizardWidth
  overflow hidden
  &__view
    position relative
    left 0
    width $wizardWidth * 3
    overflow hidden
    transition left 1s
.workspaceForm, .userForm, .roleForm
  display inline-block
  vertical-align top
  width $wizardWidth
  &__item
    &__separator
      font-weight bold
    &__text-link span
      color #1a0dab
      cursor pointer
      &:hover
        text-decoration underline
  &__wrapper-hidden
    overflow hidden
    transition height 0.3s
    &__picto
      width 25px
      margin-top 5px
  &__nextbtn
    float right
    margin 15px 3px 0 0
.userForm
  &__backbtn
    margin 0 0 0 3px
  &__form
    display inline-block
    vertical-align top
  &__item
    .customCheckbox
      & > input:before
        top 5px
      &.checked > input:after
        top -12px

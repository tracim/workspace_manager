$borderStyle = 1px solid #ccc
$btnRemoveGeneric
  position absolute
  top 50%
  transform translateY(-50%)
  left 30px
  width 24px
  height 24px
.roleForm
  &__backbtn
    @extends .userForm__backbtn
    margin-bottom 15px
  &__tab
    margin 0 auto
    text-align center
    &__removeuser
      @extends $btnRemoveGeneric
      border 1px solid #ccc
      border-radius 14px
      color red
      font-weight bold
      text-align center
      cursor pointer
      transition left 0.15s
      &__wrapper
        @extends $btnRemoveGeneric
        left -30px
        width 30px
        overflow hidden
    th, td
      border-left $borderStyle
      border-right $borderStyle
      vertical-align middle
    th
      padding 8px
    td:nth-child(1)
      position relative
      max-width 160px
      padding 5px 8px
    tr
      border-top $borderStyle
      border-bottom $borderStyle
      &:hover
        .roleForm__tab__removeuser
          left 0px
.customRadio
  width 100%
  margin 0
  line-height 35px
  cursor pointer
  & > input
    width 0px
    height 0px
    &:before
      content ''
      display block
      position relative
      top -13px
      left -8px
      width 16px
      height 16px
      border-radius 16px
      border 1px solid #aaa
      cursor pointer
  &.checked > input:after
    content ''
    display block
    position relative
    top -26px
    left -5px
    width 10px
    height 10px
    border-radius 10px
    background-color green
.customCheckbox
  width 100%
  margin 0
  line-height 35px
  cursor pointer
  & > input
    width 0px
    height 0px
    &:before
      content ''
      display block
      position relative
      top -13px
      left -8px
      width 16px
      height 16px
      border-radius 2px
      border 1px solid #aaa
      cursor pointer
  &.checked > input:after
    content 'L'
    display block
    position relative
    top -30px
    left -2px
    width 10px
    height 10px
    color green
    transform scaleX(-1) rotate(-45deg)
    font-size 16px
    font-weight bold
